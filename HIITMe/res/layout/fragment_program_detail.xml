<?xml version="1.0" encoding="utf-8"?>
<com.alexgilleran.hiitme.presentation.programdetail.views.ProgramDetailView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name_ro"
            style="@style/EditableText"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/description_ro"
            style="@style/SubtitleText"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/name_edit"
            style="@style/EditableText"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/description_edit"
            style="@style/SubtitleText"
            android:layout_marginBottom="5dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/button_add_exercise"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_exercise_add"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/button_add_node"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_node_add"
                android:visibility="invisible" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/root_node_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >
        </FrameLayout>
    </LinearLayout>

</com.alexgilleran.hiitme.presentation.programdetail.views.ProgramDetailView>