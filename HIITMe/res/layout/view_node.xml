<?xml version="1.0" encoding="utf-8"?>
<com.alexgilleran.hiitme.presentation.programdetail.views.NodeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_node_view"
    style="@style/Node"
    android:layout_margin="10dp"
    android:paddingBottom="20dp"
    android:paddingTop="1dp"
    android:paddingLeft="2.5dp"
    android:paddingRight="2.5dp"
    android:background="@drawable/shadow"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/node_top_bg"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textview_repcount"
            style="@style/EditableText"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/button_move_program_group"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_drag"
            android:visibility="invisible" />
    </RelativeLayout>

</com.alexgilleran.hiitme.presentation.programdetail.views.NodeView>