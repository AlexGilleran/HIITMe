<?xml version="1.0" encoding="utf-8"?>
<com.alexgilleran.hiitme.presentation.programdetail.views.ExerciseView xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/Exercise"
   android:layout_width="200dp"
   android:paddingBottom="3dp"
   android:paddingLeft="1dp"
   android:paddingRight="1dp"
   android:background="@drawable/card_base"
   android:layout_height="wrap_content"
   android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imageview_effort_level"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/effort_icon_bg_hard"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

    <TextView
        android:id="@+id/exercise_duration"
        style="@style/EditableText"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/imageview_effort_level"
        android:includeFontPadding="false"
        android:paddingTop="3dp"
        android:textSize="38sp"/>

    <TextView
        android:id="@+id/exercise_name"
        style="@style/EditableText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_duration"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-8dp"
        android:layout_toRightOf="@id/imageview_effort_level"
        android:maxLines="1"
        android:paddingBottom="3dp"
        android:textSize="25sp"/>


</com.alexgilleran.hiitme.presentation.programdetail.views.ExerciseView>