<?xml version="1.0" encoding="utf-8"?>
<com.alexgilleran.hiitme.presentation.programdetail.views.ExerciseView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Exercise"
    android:layout_width="200dp"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/exercise_effort_level"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/effort_icon_background"
        android:padding="5dp" />

    <TextView
        android:id="@+id/exercise_duration"
        style="@style/EditableText"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/exercise_effort_level"
        android:includeFontPadding="false"
        android:paddingTop="3dp"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/exercise_name"
        style="@style/EditableText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_duration"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-8dp"
        android:layout_toRightOf="@id/exercise_effort_level"
        android:maxLines="1"
        android:paddingBottom="3dp"
        android:text="Ay"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/button_move"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_drag"
        android:visibility="gone" />

</com.alexgilleran.hiitme.presentation.programdetail.views.ExerciseView>