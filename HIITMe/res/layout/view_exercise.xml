<?xml version="1.0" encoding="utf-8"?>
<com.alexgilleran.hiitme.presentation.programdetail.views.ExerciseView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_base" >

    <TextView
        android:id="@+id/exercise_effort_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/exercise_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/exercise_effort_level"
        android:padding="10dp"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/button_move"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_move"
        android:visibility="gone" />

</com.alexgilleran.hiitme.presentation.programdetail.views.ExerciseView>