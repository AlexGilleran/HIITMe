<?xml version="1.0" encoding="utf-8"?>
<com.alexgilleran.hiitme.presentation.programdetail.views.ExerciseView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Exercise"
    android:layout_width="200dp"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/exercise_duration"
        style="@style/EditableText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/exercise_effort_level"
        style="@style/EditableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/exercise_name"
        style="@style/EditableText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/exercise_duration"
        android:maxLines="1"
        android:text="Ay"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/button_move"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_drag"
        android:visibility="gone" />

</com.alexgilleran.hiitme.presentation.programdetail.views.ExerciseView>