<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/accent">
    <item
        android:id="@android:id/mask"
        android:bottom="2.8dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:drawable="@drawable/card_ripple_mask">
    </item>
    <item>
        <selector>
            <item
                android:state_focused="false"
                android:state_pressed="false"
                android:drawable="@drawable/card_bg"/>
            <item
                android:state_focused="false"
                android:state_pressed="true"
                android:drawable="@drawable/card_pressed"/>
            <item
                android:state_focused="true"
                android:state_pressed="false"
                android:drawable="@drawable/card_dragged"/>
        </selector>
    </item>
</ripple>