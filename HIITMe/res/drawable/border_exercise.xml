<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="3dp" />

            <solid android:color="#ccc" />
        </shape>
    </item>
    <item
        android:id="@+id/card"
        android:bottom="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="3dp" />

            <stroke
                android:width="1px"
                android:color="#ccc" />

            <solid android:color="@android:color/white" />

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>