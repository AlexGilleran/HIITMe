<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="3dp" />

            <solid android:color="#c7c7c7" />
        </shape>
    </item>
    <item android:top="1px">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="3dp" />

            <solid android:color="#cccccc" />
        </shape>
    </item>
    <item
        android:id="@+id/card"
        android:bottom="1.8dp"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="3dp" />

            <solid android:color="@color/being_dragged" />

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>