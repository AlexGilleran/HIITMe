<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="3dp" />

            <solid android:color="#c7c7c7" />
        </shape>
    </item>
    <item android:top="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="3dp" />

            <solid android:color="#cccccc" />
        </shape>
    </item>
    <item
        android:id="@+id/card"
        android:bottom="1.8dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="3dp" />

            <solid android:color="@color/base_background" />

            <padding
                android:bottom="1.8dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

</layer-list>