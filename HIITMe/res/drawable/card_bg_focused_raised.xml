<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="3dp"/>

            <solid android:color="#c7c7c7"/>
        </shape>
    </item>
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="3dp"/>

            <solid android:color="#ffa6a6a6"/>
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="3dp"/>

            <solid android:color="@color/accent"/>

            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
        </shape>
    </item>
</layer-list>