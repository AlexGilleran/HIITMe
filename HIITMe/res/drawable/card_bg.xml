<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:background="@android:drawable/toast_frame"
            android:shape="rectangle">
            <corners android:radius="3dp"/>

            <solid android:color="#88c7c7c7"/>
        </shape>
    </item>
    <item android:top="1dp">
        <shape
            android:dither="true"
            android:background="@android:drawable/toast_frame"
            android:shape="rectangle">
            <corners android:radius="3dp"/>

            <solid android:color="#88606060"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/card_inner"
        android:id="@+id/card"
        android:bottom="2.3dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp">
    </item>

</layer-list>